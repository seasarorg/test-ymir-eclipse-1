<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.seasar.ymir.eclipse.viliCategory"
            class="org.seasar.ymir.eclipse.wizards.NewProjectWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            icon="icons/newViliProject.gif"
            id="org.seasar.ymir.eclipse.wizards.NewProjectWizard"
            name="%newWizard.name"
            project="true">
         <description>
            %newWizard.description
         </description>
      </wizard>
      <category
            id="org.seasar.ymir.eclipse.viliCategory"
            name="%newWizard.category.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%plugin.name"
            class="org.seasar.ymir.eclipse.preferences.ViliPreferencePage"
            id="org.seasar.ymir.eclipse.preferences.viliPreferencePage">
      </page>
      <page
            category="org.seasar.ymir.eclipse.preferences.viliPreferencePage"
            class="org.seasar.ymir.eclipse.preferences.TemplatePreferencePage"
            id="org.seasar.ymir.eclipse.preferences.templatePreferencePage"
            name="Template">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.seasar.ymir.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.seasar.ymir.eclipse.properties.ViliPropertyPage"
            id="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            name="%plugin.name">
         <enabledWhen>
            <or>
               <instanceof
                     value="org.eclipse.jdt.core.IJavaProject">
               </instanceof>
               <adapt
                     type="org.eclipse.core.resources.IProject">
               </adapt>
            </or>
         </enabledWhen>
      </page>
      <page
            category="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            class="org.seasar.ymir.eclipse.properties.TemplatePropertyPage"
            id="org.seasar.ymir.eclipse.properties.templatePropertyPage"
            name="Template">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="org.seasar.ymir.eclipse.viliProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
      <page
            category="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            class="org.seasar.ymir.eclipse.properties.ViliProjectPreferencesPropertyPage"
            id="org.seasar.ymir.eclipse.properties.viliProjectPreferencesPropertyPage"
            name="Project Preferences">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="org.seasar.ymir.eclipse.viliProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
      <page
            category="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            class="org.seasar.ymir.eclipse.properties.MoldParametersPropertyPage"
            id="org.seasar.ymir.eclipse.properties.moldParametersPropertyPage"
            name="Skeleton/Fragment Parameters">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="org.seasar.ymir.eclipse.viliProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         id="org.seasar.ymir.eclipse.viliProjectNature"
         name="Vili Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.seasar.ymir.eclipse.natures.ViliProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.seasar.ymir.eclipse.javaObjectContribution"
            nameFilter="*.java"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.seasar.ymir.eclipse.menu"
               label="%plugin.name"
               path="additions">
            <groupMarker name="additions"/>
            <groupMarker name="additions2"/>
         </menu>
         <visibility>
            <and>
               <objectState
                     name="projectNature"
                     value="org.seasar.ymir.eclipse.ymirProjectNature" />
               <or>
                  <objectState
                        name="name"
                        value="*Page.java"/>
                  <objectState
                        name="name"
                        value="*PageBase.java"/>
               </or>
            </and>
         </visibility>
         <action
               class="org.seasar.ymir.eclipse.actions.TogglePageAndHtmlAction"
               icon="icons/togglePageAndHtml.gif"
               id="org.seasar.ymir.eclipse.togglePageAndHtmlAction"
               label="%action.togglePageAndHtml"
               menubarPath="org.seasar.ymir.eclipse.menu/additions"/>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.seasar.ymir.eclipse.javaObjectContribution"
            nameFilter="*.html"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.seasar.ymir.eclipse.menu"
               label="%plugin.name"
               path="additions">
            <groupMarker name="additions"/>
            <groupMarker name="additions2"/>
         </menu>
         <visibility>
            <objectState
                  name="projectNature"
                  value="org.seasar.ymir.eclipse.ymirProjectNature" />
         </visibility>
         <action
               class="org.seasar.ymir.eclipse.actions.CreateSourceAction"
               icon="icons/createSource.png"
               id="org.seasar.ymir.eclipse.createSourceAction"
               label="%action.createSource"
               menubarPath="org.seasar.ymir.eclipse.menu/additions">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.ViewOnServerAction"
               icon="icons/viewOnServer.gif"
               id="org.seasar.ymir.eclipse.viewOnServerAction"
               label="%action.viewOnServer"
               menubarPath="org.seasar.ymir.eclipse.menu/additions">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.TogglePageAndHtmlAction"
               icon="icons/togglePageAndHtml.gif"
               id="org.seasar.ymir.eclipse.togglePageAndHtmlAction"
               label="%action.togglePageAndHtml"
               menubarPath="org.seasar.ymir.eclipse.menu/additions"/>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.seasar.ymir.eclipse.objectContribution"
            objectClass="org.eclipse.core.resources.IResource">
         <menu
               id="org.seasar.ymir.eclipse.menu"
               label="%plugin.name"
               path="additions">
            <groupMarker name="additions"/>
            <groupMarker name="additions2"/>
         </menu>
         <visibility>
            <objectState
                  name="projectNature"
                  value="org.seasar.ymir.eclipse.viliProjectNature">
            </objectState>
         </visibility>
         <action
               class="org.seasar.ymir.eclipse.actions.AddFragmentsAction"
               id="org.seasar.ymir.eclipse.addFragmentsAction"
               label="%action.addFragments"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.ActionAction"
               id="org.seasar.ymir.eclipse.actionAction"
               label="%action.action"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2"
               style="pulldown">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.CreatePathMappingsAction"
               id="org.seasar.ymir.eclipse.createPathMappingsAction"
               label="%action.createPathMappings"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.ViewRootOnServerAction"
               icon="icons/viewRootOnServer.gif"
               id="org.seasar.ymir.eclipse.viewRootOnServerAction"
               label="%action.viewRootOnServer"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="org.seasar.ymir.eclipse.ymirProjectNature"
         name="Ymir Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.seasar.ymir.eclipse.natures.YmirProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.seasar.ymir.eclipse.command.category"
            name="Vili"/>
      <command
            categoryId="org.seasar.ymir.eclipse.command.category"
            id="org.seasar.ymir.eclipse.command.TogglePageAndHtmlAction"
            name="%action.togglePageAndHtml"/>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.seasar.ymir.eclipse.command.TogglePageAndHtmlAction"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+5">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.seasar.ymir.eclipse.plugin.actionSet"
            label="Vili"
            visible="true">
         <menu
               id="org.seasar.ymir.eclipse.editor.Actions"
               label="Vili"
               path="Navigate/additions">
            <separator name="additions"/>
         </menu>
         <action
               class="org.seasar.ymir.eclipse.actions.TogglePageAndHtmlAction"
               definitionId="org.seasar.ymir.eclipse.command.TogglePageAndHtmlAction"
               icon="icons/togglePageAndHtml.gif"
               id="org.seasar.ymir.eclipse.action.TogglePageAndHtmlAction"
               label="%action.togglePageAndHtml"
               menubarPath="Navigate/org.seasar.ymir.eclipse.editor.Actions/additions"
               style="push">
         </action>
         </actionSet>
   </extension>

</plugin>
