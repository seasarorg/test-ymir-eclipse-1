<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.seasar.ymir.eclipse.viliCategory"
            class="org.seasar.ymir.eclipse.wizards.NewProjectWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            icon="icons/newViliProject.gif"
            id="org.seasar.ymir.eclipse.wizards.NewProjectWizard"
            name="%newWizard.name"
            project="true">
         <description>
            %newWizard.description
         </description>
      </wizard>
      <category
            id="org.seasar.ymir.eclipse.viliCategory"
            name="%newWizard.category.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%plugin.name"
            class="org.seasar.ymir.eclipse.preferences.ViliPreferencePage"
            id="org.seasar.ymir.eclipse.preferences.viliPreferencePage">
      </page>
      <page
            category="org.seasar.ymir.eclipse.preferences.viliPreferencePage"
            class="org.seasar.ymir.eclipse.preferences.TemplatePreferencePage"
            id="org.seasar.ymir.eclipse.preferences.templatePreferencePage"
            name="Template">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.seasar.ymir.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.seasar.ymir.eclipse.properties.ViliPropertyPage"
            id="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            name="%plugin.name">
         <enabledWhen>
            <or>
               <instanceof
                     value="org.eclipse.jdt.core.IJavaProject">
               </instanceof>
               <adapt
                     type="org.eclipse.core.resources.IProject">
               </adapt>
            </or>
         </enabledWhen>
      </page>
   </extension>
   <extension
         id="org.seasar.ymir.eclipse.viliProjectNature"
         name="Vili Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.seasar.ymir.eclipse.natures.ViliProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.seasar.ymir.eclipse.objectContribution"
            objectClass="org.eclipse.core.resources.IResource">
         <menu
               id="org.seasar.ymir.eclipse.menu"
               label="%plugin.name"
               path="additions">
         </menu>
         <action
               class="org.seasar.ymir.eclipse.popup.actions.AddFragmentsAction"
               id="org.seasar.ymir.eclipse.addFragmentsAction"
               label="%popup.action.addFragments"
               menubarPath="org.seasar.ymir.eclipse.menu/group">
         </action>
         <visibility>
            <objectState
                  name="projectNature"
                  value="org.seasar.ymir.eclipse.viliProjectNature">
            </objectState>
         </visibility>
      </objectContribution>
   </extension>
   <extension
         id="org.seasar.ymir.eclipse.ymirProjectNature"
         name="Ymir Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.seasar.ymir.eclipse.natures.YmirProjectNature">
         </run>
      </runtime>
   </extension>

</plugin>
