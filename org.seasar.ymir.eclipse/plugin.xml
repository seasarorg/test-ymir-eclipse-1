<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="skeletonTemplates" name="Skeleton Templates" schema="schema/skeletonTemplates.exsd"/>
   <extension-point id="fragmentTemplates" name="Fragment Templates" schema="schema/fragmentTemplates.exsd"/>

   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.seasar.ymir.eclipse.viliCategory"
            class="org.seasar.ymir.eclipse.wizards.NewProjectWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            icon="icons/newViliProject.gif"
            id="org.seasar.ymir.eclipse.wizards.NewProjectWizard"
            name="%newWizard.name"
            project="true">
         <description>
            %newWizard.description
         </description>
      </wizard>
      <category
            id="org.seasar.ymir.eclipse.viliCategory"
            name="%newWizard.category.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="%plugin.name"
            class="org.seasar.ymir.eclipse.preferences.ViliPreferencePage"
            id="org.seasar.ymir.eclipse.preferences.viliPreferencePage">
      </page>
      <page
            category="org.seasar.ymir.eclipse.preferences.viliPreferencePage"
            class="org.seasar.ymir.eclipse.preferences.TemplatePreferencePage"
            id="org.seasar.ymir.eclipse.preferences.templatePreferencePage"
            name="Template">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.seasar.ymir.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.seasar.ymir.eclipse.properties.ViliPropertyPage"
            id="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            name="%plugin.name">
         <enabledWhen>
            <or>
               <instanceof
                     value="org.eclipse.jdt.core.IJavaProject">
               </instanceof>
               <adapt
                     type="org.eclipse.core.resources.IProject">
               </adapt>
            </or>
         </enabledWhen>
      </page>
      <page
            category="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            class="org.seasar.ymir.eclipse.properties.TemplatePropertyPage"
            id="org.seasar.ymir.eclipse.properties.templatePropertyPage"
            name="Template">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="org.seasar.ymir.eclipse.viliProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
      <page
            category="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            class="org.seasar.ymir.eclipse.properties.ViliProjectPreferencesPropertyPage"
            id="org.seasar.ymir.eclipse.properties.viliProjectPreferencesPropertyPage"
            name="Project Preferences">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="org.seasar.ymir.eclipse.viliProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
      <page
            category="org.seasar.ymir.eclipse.properties.viliPropertyPage"
            class="org.seasar.ymir.eclipse.properties.MoldParametersPropertyPage"
            id="org.seasar.ymir.eclipse.properties.moldParametersPropertyPage"
            name="Skeleton/Fragment Parameters">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="org.seasar.ymir.eclipse.viliProjectNature">
               </test>
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         id="org.seasar.ymir.eclipse.viliProjectNature"
         name="Vili Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.seasar.ymir.eclipse.natures.ViliProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.seasar.ymir.eclipse.javaObjectContribution"
            nameFilter="*.java"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.seasar.ymir.eclipse.menu"
               label="%plugin.name"
               path="additions">
            <groupMarker name="additions"/>
            <groupMarker name="additions2"/>
         </menu>
         <visibility>
            <and>
               <objectState
                     name="projectNature"
                     value="org.seasar.ymir.eclipse.ymirProjectNature" />
               <or>
                  <objectState
                        name="name"
                        value="*Page.java"/>
                  <objectState
                        name="name"
                        value="*PageBase.java"/>
               </or>
            </and>
         </visibility>
         <action
               class="org.seasar.ymir.eclipse.actions.TogglePageAndHtmlAction"
               icon="icons/togglePageAndHtml.gif"
               id="org.seasar.ymir.eclipse.togglePageAndHtmlAction"
               label="%action.togglePageAndHtml"
               menubarPath="org.seasar.ymir.eclipse.menu/additions"/>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.seasar.ymir.eclipse.javaObjectContribution"
            nameFilter="*.html"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.seasar.ymir.eclipse.menu"
               label="%plugin.name"
               path="additions">
            <groupMarker name="additions"/>
            <groupMarker name="additions2"/>
         </menu>
         <visibility>
            <objectState
                  name="projectNature"
                  value="org.seasar.ymir.eclipse.ymirProjectNature" />
         </visibility>
         <action
               class="org.seasar.ymir.eclipse.actions.CreateSourceAction"
               icon="icons/createSource.png"
               id="org.seasar.ymir.eclipse.createSourceAction"
               label="%action.createSource"
               menubarPath="org.seasar.ymir.eclipse.menu/additions">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.ViewOnServerAction"
               icon="icons/viewOnServer.gif"
               id="org.seasar.ymir.eclipse.viewOnServerAction"
               label="%action.viewOnServer"
               menubarPath="org.seasar.ymir.eclipse.menu/additions">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.TogglePageAndHtmlAction"
               icon="icons/togglePageAndHtml.gif"
               id="org.seasar.ymir.eclipse.togglePageAndHtmlAction"
               label="%action.togglePageAndHtml"
               menubarPath="org.seasar.ymir.eclipse.menu/additions"/>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.seasar.ymir.eclipse.objectContribution"
            objectClass="org.eclipse.core.resources.IResource">
         <menu
               id="org.seasar.ymir.eclipse.menu"
               label="%plugin.name"
               path="additions">
            <groupMarker name="additions"/>
            <groupMarker name="additions2"/>
         </menu>
         <visibility>
            <objectState
                  name="projectNature"
                  value="org.seasar.ymir.eclipse.viliProjectNature">
            </objectState>
         </visibility>
         <action
               class="org.seasar.ymir.eclipse.actions.AddFragmentsAction"
               id="org.seasar.ymir.eclipse.addFragmentsAction"
               label="%action.addFragments"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.ActionAction"
               id="org.seasar.ymir.eclipse.actionAction"
               label="%action.action"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2"
               style="pulldown">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.CreatePathMappingsAction"
               id="org.seasar.ymir.eclipse.createPathMappingsAction"
               label="%action.createPathMappings"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2">
         </action>
         <action
               class="org.seasar.ymir.eclipse.actions.ViewRootOnServerAction"
               icon="icons/viewRootOnServer.gif"
               id="org.seasar.ymir.eclipse.viewRootOnServerAction"
               label="%action.viewRootOnServer"
               menubarPath="org.seasar.ymir.eclipse.menu/additions2">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="org.seasar.ymir.eclipse.ymirProjectNature"
         name="Ymir Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.seasar.ymir.eclipse.natures.YmirProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.seasar.ymir.eclipse.command.category"
            name="Vili"/>
      <command
            categoryId="org.seasar.ymir.eclipse.command.category"
            id="org.seasar.ymir.eclipse.command.TogglePageAndHtmlAction"
            name="%action.togglePageAndHtml"/>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.seasar.ymir.eclipse.command.TogglePageAndHtmlAction"
            contextId="org.eclipse.ui.textEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+5">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.seasar.ymir.eclipse.plugin.actionSet"
            label="Vili"
            visible="true">
         <menu
               id="org.seasar.ymir.eclipse.editor.Actions"
               label="Vili"
               path="Navigate/additions">
            <separator name="additions"/>
         </menu>
         <action
               class="org.seasar.ymir.eclipse.actions.TogglePageAndHtmlAction"
               definitionId="org.seasar.ymir.eclipse.command.TogglePageAndHtmlAction"
               icon="icons/togglePageAndHtml.gif"
               id="org.seasar.ymir.eclipse.action.TogglePageAndHtmlAction"
               label="%action.togglePageAndHtml"
               menubarPath="Navigate/org.seasar.ymir.eclipse.editor.Actions/additions"
               style="push">
         </action>
         </actionSet>
   </extension>
   <extension
         point="org.seasar.ymir.eclipse.skeletonTemplates">
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>ymir-skeleton-generic</artifactId>
      <name>基本的なYmirプロジェクト</name>
      <description>基本的なYmirプロジェクトを作成します。テンプレートエンジンにはFreyja ZPTエンジンを使用します。</description>
    </skeleton>
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>ymir-skeleton-generic</artifactId>
      <name>Ymir+DBFluteプロジェクト</name>
      <description>基本的なYmirプロジェクトを作成します。テンプレートエンジンにはFreyja ZPTエンジンを使用します。データベースアクセスにはDBFluteを使用します。</description>
      <fragments>
        <fragment>
          <groupId>org.seasar.ymir.skeleton</groupId>
          <artifactId>dbflute-fragment-generic</artifactId>
        </fragment>
      </fragments>
    </skeleton>
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>ymir-skeleton-generic</artifactId>
      <name>Ymir標準プロジェクト（YSP）</name>
      <description>The Ymir Projectで規定している標準構成のプロジェクトを作成します。</description>
      <fragments>
        <fragment>
          <groupId>org.seasar.ymir.skeleton</groupId>
          <artifactId>dbflute-fragment-generic</artifactId>
        </fragment>
        <fragment>
          <groupId>org.seasar.ymir.skeleton</groupId>
          <artifactId>ymir-fragment-utility</artifactId>
        </fragment>
        <fragment>
          <groupId>org.seasar.ymir.skeleton.ysp</groupId>
          <artifactId>ysp-base</artifactId>
        </fragment>
      </fragments>
    </skeleton>
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>skeleton-skeleton-generic</artifactId>
      <name>Viliスケルトンプロジェクト</name>
      <description>Viliのプロジェクトスケルトンを作成するためのプロジェクトを作成します。</description>
    </skeleton>
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>skeleton-skeleton-web</artifactId>
      <name>Vili Webアプリケーションスケルトンプロジェクト</name>
      <description>ViliのWebアプリケーションプロジェクトスケルトンを作成するためのプロジェクトを作成します。</description>
    </skeleton>
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>fragment-skeleton-generic</artifactId>
      <name>Viliフラグメントプロジェクト</name>
      <description>Viliのプロジェクトフラグメントを作成するためのプロジェクトを作成します。</description>
    </skeleton>
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>t2-skeleton-generic</artifactId>
      <name>標準のT2プロジェクト</name>
      <description>標準のT2プロジェクトを作成します。テンプレートエンジンにはJSPを使用します。</description>
    </skeleton>
    <skeleton>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>cubby-skeleton-generic</artifactId>
      <name>標準のCubbyプロジェクト</name>
      <description>標準のCubbyプロジェクトを作成します。テンプレートエンジンにはJSPを使用します。</description>
    </skeleton>
   </extension>
   <extension
         point="org.seasar.ymir.eclipse.fragmentTemplates">
    <fragment>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>ymir-fragment-utility</artifactId>
      <name>ユーティリティ</name>
      <description>アプリケーションを効率良く開発するためのユーティリティクラスを追加します。</description>
    </fragment>
    <fragment>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>dbflute-fragment-generic</artifactId>
      <name>DBFlute</name>
      <description>DBFluteを使ってデータベースにアクセスする機能を追加します。</description>
    </fragment>
    <fragment>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>ymir-fragment-json</artifactId>
      <name>JSON連携</name>
      <description>JSONリクエストを受け取ったりJSONレスポンスを返したりする機能を追加します。</description>
    </fragment>
    <fragment>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>ymir-fragment-amf</artifactId>
      <name>AMF連携</name>
      <description>AMFプロトコルで通信する機能を追加します。FlexからPageオブジェクトのメソッドを呼び出すことができるようになります。</description>
    </fragment>
    <fragment>
      <groupId>org.seasar.ymir.skeleton</groupId>
      <artifactId>yonex-fragment-generic</artifactId>
      <name>統合テスト環境（Yonex）</name>
      <description>Yonexを使った統合テスト環境を追加します。</description>
    </fragment>
    <fragment>
      <groupId>org.seasar.ymir.skeleton.ysp</groupId>
      <artifactId>ysp-base</artifactId>
      <name>[YSP] 基本リソース</name>
      <description>[Ymir標準プロジェクト] Ymir標準プロジェクトを構築するための基本となるリソースを追加します。</description>
    </fragment>
    <fragment>
      <groupId>org.seasar.ymir.skeleton.ysp</groupId>
      <artifactId>ysp-login</artifactId>
      <name>[YSP] ログイン機能</name>
      <description>[Ymir標準プロジェクト] ログイン機能を追加します。</description>
    </fragment>
    <fragment>
      <groupId>org.seasar.ymir.skeleton.ysp</groupId>
      <artifactId>ysp-crud</artifactId>
      <name>[YSP] CRUD用のビューとロジック</name>
      <description>[Ymir標準プロジェクト] CRUD用のビューとロジックを追加します。</description>
    </fragment>
   </extension>

</plugin>
